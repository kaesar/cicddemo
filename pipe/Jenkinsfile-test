pipeline {
    agent any
    tools { 
        nodejs "nodejs"
        //dockerTool "docker"
    }
    environment {
        PATH = "/opt/homebrew/bin:${env.PATH}"
    }
    options {
        skipDefaultCheckout(true)
    }
    stages {
        stage('Checkout/Clone') {
            steps {
                cleanWs()
                //checkout scm
                sh '''
                git --version
                curl --version
                node -v
                git clone https://github.com/kaesar/cicddemo.git
                '''
            }
        }
        stage('Build NodeJS Code') {
            steps {
                dir('cicddemo') {
                    sh '''
                    npm install
                    npm run build
                    '''
                }
            }
        }
        stage('Check/Build Docker Image') {
            steps {
                dir('cicddemo') {
                    sh '''
                    docker --version
                    docker build -t cicddemo:v1 .
                    '''
                    /*script {
                        def dockerImage = docker.build('cicddemo:v1', '.')
                        //dockerImage.push()
                    }*/
                }
            }
        }
        stage('Prepare IaC with Terraform') {
            steps {
                dir('cicddemo/iac') {
                    sh '''
                    terraform -version
                    terraform init
                    terraform validate
                    terraform plan -out=tfplan
                    '''
                }
            }
        }
        stage('Deploy to AWS') {
            steps {
                dir('cicddemo/iac') {
                    /*sh 'aws configure set aws_access_key_id $AWS_ACCESS_KEY_ID'
                    sh 'aws configure set aws_secret_access_key $AWS_SECRET_ACCESS_KEY'
                    sh 'aws configure set region $AWS_REGION'*/
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }
}