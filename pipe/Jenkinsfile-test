pipeline {
    agent any
    tools { nodejs "nodejs" }
    options {
        skipDefaultCheckout(true)
    }
    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                //checkout scm
                sh '''
                git --version
                curl --version
                node -v
                git clone https://github.com/kaesar/cicddemo.git
                '''
            }
        }
        stage('Buid NodeJS Code') {
            steps {
                dir('cicddemo') {
                    sh '''
                    npm install
                    npm run build
                    '''
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                /*script {
                    def dockerImage = docker.build('cicddemo:v1', '-f ./cicddemo/Dockerfile .')
                    dockerImage.push()
                }*/
                sh '''
                docker -v
                '''
            }
        }
    }
}